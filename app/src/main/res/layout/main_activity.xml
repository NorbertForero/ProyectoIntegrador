<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="414dp"
            android:layout_height="302dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/home"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absouteX="0dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_ActivityMain_TuTrabajoDiario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.405"
            tools:ignore="MissingConstraints" />

        <Button

            android:id="@+id/registrarOrden"
            android:layout_width="350dp"
            android:layout_height="95dp"
            android:background="@drawable/ovalo"
            android:drawableLeft="@mipmap/nuevo"
            android:fontFamily="@font/actor"
            android:lineSpacingExtra="10sp"
            android:text="@string/button_MainActivity_NuevoRegistro"
            android:textAllCaps="false"
            android:textColor="@drawable/txt_boton1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.539" />

        <Button
            android:id="@+id/registrosGuardados"
            android:layout_width="350dp"
            android:layout_height="95dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ovalo"
            android:text="@string/button_ActivityMain_RegistrosGuardados"
            android:drawableLeft="@mipmap/guardado"
            android:textColor="@drawable/txt_boton1"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/actor"
            android:lineSpacingExtra="10sp"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/consultarRegistro" />


        <Button
            android:id="@+id/consultarRegistro"
            android:layout_width="350dp"
            android:layout_height="95dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ovalo"
            android:drawableLeft="@mipmap/busqueda"
            android:fontFamily="@font/actor"
            android:lineSpacingExtra="10sp"
            android:text="@string/ActivityConsultarRegistro_title"
            android:textAllCaps="false"
            android:textColor="@drawable/txt_boton1"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrarOrden" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
